# Brooks Environment Variables Template
#
# IMPORTANT: Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!
#
# Usage:
#   cp .env.template .env
#   # Edit .env with your actual credentials

# ===================================
# Auth0 Configuration
# ===================================
# Get these values from your Auth0 dashboard: https://manage.auth0.com/
AUTH0_ISSUER_URI=https://your-tenant.auth0.com/
AUTH0_AUDIENCE=https://your-api-identifier

# Frontend Auth0 Configuration
VITE_AUTH0_DOMAIN=your-tenant.auth0.com
VITE_AUTH0_CLIENT_ID=your-client-id-here
VITE_AUTH0_AUDIENCE=https://your-api-identifier
VITE_AUTH0_REDIRECT_URI=http://localhost:3000

# ===================================
# Database Configuration
# ===================================
# PostgreSQL connection strings
PINS_DB_URL=jdbc:postgresql://localhost:5432/pins_db
PINS_DB_USER=pins_user
PINS_DB_PASSWORD=change-this-secure-password

SOCIAL_DB_URL=jdbc:postgresql://localhost:5432/social_db
SOCIAL_DB_USER=social_user
SOCIAL_DB_PASSWORD=change-this-secure-password

LISTS_DB_URL=jdbc:postgresql://localhost:5432/lists_db
LISTS_DB_USER=lists_user
LISTS_DB_PASSWORD=change-this-secure-password

AUTH_DB_URL=jdbc:postgresql://localhost:5432/auth_db
AUTH_DB_USER=auth_user
AUTH_DB_PASSWORD=change-this-secure-password

MODERATION_DB_URL=jdbc:postgresql://localhost:5432/moderation_db
MODERATION_DB_USER=moderation_user
MODERATION_DB_PASSWORD=change-this-secure-password

# ===================================
# JWT Configuration
# ===================================
# Generate a strong random secret (min 256 bits / 32 bytes)
# Example: openssl rand -base64 32
BROOKS_JWT_SECRET=generate-a-secure-random-secret-here-min-32-bytes

# ===================================
# Service URLs (for local development)
# ===================================
SOCIAL_SERVICE_URL=http://localhost:8082
LISTS_SERVICE_URL=http://localhost:8083
PINS_SERVICE_URL=http://localhost:8084
AUTH_SERVICE_URL=http://localhost:8081

# ===================================
# Service Ports
# ===================================
AUTH_SERVICE_PORT=8081
SOCIAL_SERVICE_PORT=8082
LISTS_SERVICE_PORT=8083
PINS_SERVICE_PORT=8084
MEDIA_SERVICE_PORT=8085
MODERATION_SERVICE_PORT=8086
NOTIFICATIONS_SERVICE_PORT=8087

